{{- if .Values.redis.enabled }}
apiVersion: v1
kind: Namespace
metadata:
  name: {{ include "sacunxt.redisNamespace" . }}
  labels:
    app.kubernetes.io/name: {{ include "sacunxt.name" . }}
    app.kubernetes.io/instance: {{ .Release.Name }}
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ .Values.redis.statefulSetName | default "sacunxt-redis" }}-config
  namespace: {{ include "sacunxt.redisNamespace" . }}
  labels:
    app.kubernetes.io/name: {{ include "sacunxt.name" . }}
    app.kubernetes.io/instance: {{ .Release.Name }}
    app.kubernetes.io/component: redis
data:
  redis.conf: |
    # Redis configuration for replication
    dir /data
    appendonly yes
    appendfilename "appendonly.aof"
    {{- if .Values.redis.auth.enabled }}
    requirepass {{ .Values.redis.auth.password }}
    masterauth {{ .Values.redis.auth.password }}
    {{- end }}
    # Replication settings
    replica-read-only yes
    replica-serve-stale-data yes
    # Performance tuning
    tcp-backlog 511
    timeout 0
    tcp-keepalive 300
    
  sentinel.conf: |
    # Redis Sentinel configuration
    dir /data
    sentinel monitor mymaster {{ .Values.redis.statefulSetName | default "sacunxt-redis" }}-0.{{ .Values.redis.statefulSetName | default "sacunxt-redis" }}-headless.{{ include "sacunxt.redisNamespace" . }}.svc.cluster.local {{ .Values.redis.service.ports.redis }} {{ .Values.redis.sentinel.quorum }}
    sentinel down-after-milliseconds mymaster {{ .Values.redis.sentinel.downAfterMilliseconds }}
    sentinel failover-timeout mymaster {{ .Values.redis.sentinel.failoverTimeout }}
    sentinel parallel-syncs mymaster 1
    {{- if .Values.redis.auth.enabled }}
    sentinel auth-pass mymaster {{ .Values.redis.auth.password }}
    {{- end }}
---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: {{ .Values.redis.statefulSetName | default "sacunxt-redis" }}
  namespace: {{ include "sacunxt.redisNamespace" . }}
  labels:
    app.kubernetes.io/name: {{ include "sacunxt.name" . }}
    app.kubernetes.io/instance: {{ .Release.Name }}
    app.kubernetes.io/component: redis
spec:
  serviceName: {{ .Values.redis.statefulSetName | default "sacunxt-redis" }}-headless
  replicas: {{ .Values.redis.replicas }}
  selector:
    matchLabels:
      app.kubernetes.io/name: {{ include "sacunxt.name" . }}
      app.kubernetes.io/instance: {{ .Release.Name }}
      app.kubernetes.io/component: redis
  template:
    metadata:
      labels:
        app.kubernetes.io/name: {{ include "sacunxt.name" . }}
        app.kubernetes.io/instance: {{ .Release.Name }}
        app.kubernetes.io/component: redis
    spec:
      securityContext:
        fsGroup: 1000
        runAsUser: 1000
        runAsNonRoot: true
      {{- include "sacunxt.imagePullSecrets" . | nindent 6 }}
      initContainers:
        - name: init-redis
          image: redis:7-alpine
          imagePullPolicy: {{ .Values.global.imagePullPolicy }}
          command:
            - sh
            - -c
            - |
              set -ex
              # Copy config files
              cp /mnt/config/redis.conf /data/redis.conf
              # Set proper permissions
              chmod 644 /data/redis.conf
              # Determine if this pod should be a replica
              if [ "$(hostname)" != "{{ .Values.redis.statefulSetName | default "sacunxt-redis" }}-0" ]; then
                echo "replicaof {{ .Values.redis.statefulSetName | default "sacunxt-redis" }}-0.{{ .Values.redis.statefulSetName | default "sacunxt-redis" }}-headless.{{ include "sacunxt.redisNamespace" . }}.svc.cluster.local {{ .Values.redis.service.ports.redis }}" >> /data/redis.conf
              fi
          volumeMounts:
            - name: config
              mountPath: /mnt/config
            - name: data
              mountPath: /data
          securityContext:
            runAsUser: 1000
            runAsNonRoot: true
      containers:
        - name: redis
          image: redis:7-alpine
          imagePullPolicy: {{ .Values.global.imagePullPolicy }}
          command:
            - redis-server
            - /data/redis.conf
          ports:
            - name: redis
              containerPort: {{ .Values.redis.service.ports.redis }}
              protocol: TCP
          {{- with .Values.redis.master.resources }}
          resources:
            {{- toYaml . | nindent 12 }}
          {{- end }}
          livenessProbe:
            tcpSocket:
              port: {{ .Values.redis.service.ports.redis }}
            initialDelaySeconds: 30
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 3
          readinessProbe:
            exec:
              command:
                - sh
                - -c
                - redis-cli ping | grep -q PONG
            initialDelaySeconds: 10
            periodSeconds: 5
            timeoutSeconds: 3
            failureThreshold: 3
          volumeMounts:
            - name: data
              mountPath: /data
          securityContext:
            runAsUser: 1000
            runAsNonRoot: true
            allowPrivilegeEscalation: false
            capabilities:
              drop:
                - ALL
        {{- if .Values.redis.sentinel.enabled }}
        - name: sentinel
          image: redis:7-alpine
          imagePullPolicy: {{ .Values.global.imagePullPolicy }}
          command:
            - sh
            - -c
            - |
              set -ex
              # Copy sentinel config
              cp /mnt/config/sentinel.conf /data/sentinel.conf
              chmod 644 /data/sentinel.conf
              # Start sentinel
              redis-sentinel /data/sentinel.conf
          ports:
            - name: sentinel
              containerPort: {{ .Values.redis.service.ports.sentinel }}
              protocol: TCP
          {{- with .Values.redis.sentinel.resources }}
          resources:
            {{- toYaml . | nindent 12 }}
          {{- end }}
          livenessProbe:
            tcpSocket:
              port: {{ .Values.redis.service.ports.sentinel }}
            initialDelaySeconds: 30
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 3
          readinessProbe:
            exec:
              command:
                - sh
                - -c
                - redis-cli -p {{ .Values.redis.service.ports.sentinel }} ping | grep -q PONG
            initialDelaySeconds: 10
            periodSeconds: 5
            timeoutSeconds: 3
            failureThreshold: 3
          volumeMounts:
            - name: config
              mountPath: /mnt/config
            - name: data
              mountPath: /data
          securityContext:
            runAsUser: 1000
            runAsNonRoot: true
            allowPrivilegeEscalation: false
            capabilities:
              drop:
                - ALL
        {{- end }}
      volumes:
        - name: config
          configMap:
            name: {{ .Values.redis.statefulSetName | default "sacunxt-redis" }}-config
  {{- if .Values.redis.master.persistence.enabled }}
  volumeClaimTemplates:
    - metadata:
        name: data
        labels:
          app.kubernetes.io/name: {{ include "sacunxt.name" . }}
          app.kubernetes.io/instance: {{ .Release.Name }}
          app.kubernetes.io/component: redis
      spec:
        accessModes:
          - ReadWriteOnce
        storageClassName: {{ .Values.redis.master.persistence.storageClass | default "standard" }}
        resources:
          requests:
            storage: {{ .Values.redis.master.persistence.size }}
  {{- else }}
        - name: data
          emptyDir: {}
  {{- end }}
---
apiVersion: v1
kind: Service
metadata:
  name: {{ .Values.redis.serviceName | default "redis" }}
  namespace: {{ include "sacunxt.redisNamespace" . }}
  labels:
    app.kubernetes.io/name: {{ include "sacunxt.name" . }}
    app.kubernetes.io/instance: {{ .Release.Name }}
    app.kubernetes.io/component: redis
  annotations:
    service.alpha.kubernetes.io/tolerate-unready-endpoints: "true"
spec:
  type: ClusterIP
  selector:
    app.kubernetes.io/name: {{ include "sacunxt.name" . }}
    app.kubernetes.io/instance: {{ .Release.Name }}
    app.kubernetes.io/component: redis
  ports:
    - name: redis
      port: {{ .Values.redis.service.ports.redis }}
      targetPort: {{ .Values.redis.service.ports.redis }}
      protocol: TCP
    {{- if .Values.redis.sentinel.enabled }}
    - name: sentinel
      port: {{ .Values.redis.service.ports.sentinel }}
      targetPort: {{ .Values.redis.service.ports.sentinel }}
      protocol: TCP
    {{- end }}
---
apiVersion: v1
kind: Service
metadata:
  name: {{ .Values.redis.statefulSetName | default "sacunxt-redis" }}-headless
  namespace: {{ include "sacunxt.redisNamespace" . }}
  labels:
    app.kubernetes.io/name: {{ include "sacunxt.name" . }}
    app.kubernetes.io/instance: {{ .Release.Name }}
    app.kubernetes.io/component: redis
spec:
  clusterIP: None
  publishNotReadyAddresses: true
  selector:
    app.kubernetes.io/name: {{ include "sacunxt.name" . }}
    app.kubernetes.io/instance: {{ .Release.Name }}
    app.kubernetes.io/component: redis
  ports:
    - name: redis
      port: {{ .Values.redis.service.ports.redis }}
      targetPort: {{ .Values.redis.service.ports.redis }}
      protocol: TCP
    {{- if .Values.redis.sentinel.enabled }}
    - name: sentinel
      port: {{ .Values.redis.service.ports.sentinel }}
      targetPort: {{ .Values.redis.service.ports.sentinel }}
      protocol: TCP
    {{- end }}
{{- end }}
